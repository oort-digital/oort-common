{
  "extends": "../../tsconfig.json",
  "exclude": [
    "**/*.stories.tsx",
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "typings.d.ts",
    "pages",
    "demoComponents"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "composite": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  }
}
