{
  "name": "oort",
  "version": "0.0.7",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "sites/*"
    ]
  },

  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "rm": "rimraf node_modules && npm run rm --workspaces --if-present"
  }
}